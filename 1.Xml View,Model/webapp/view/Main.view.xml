<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
    controllerName="msg.ri.controller.Main">

    <f:SimpleForm editable="true"  >
        <f:title>
            <core:Title icon="sap-icon://customer" text="Employee Information Form" level="H2"  />
        </f:title>
        <f:content>
         <Label text="Employee ID" />
         <Input width="30%" value="{/empStr/empId}" id="idInput" placeholder="Enter Employee ID" />
         
         <Label text="Employee Name"/>
         <Input  id="eName" width="40%" value="{path:'/empStr/eName'}"/>
        
         <Label text="Employee salary"/>
         <Input id="eSalary" width="30%"/>
         
         <Label text="Currency"/>
         <Input id="eCurr" width="20%"/>

         <Label/>
         <Button text="Submit" type="Emphasized" press="onSubmit"/>
        
        </f:content>

    </f:SimpleForm>
    

</mvc:View>